<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="Contact Us"
            android:textStyle="bold"
            android:id="@+id/textFeedback"
            android:textSize="30dp"
            android:textColor="#000"

            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fill fields below and Click submit"
            android:textSize="13dp"
            android:textColor="@color/colorAccent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_manname"
                android:layout_marginTop="20dp"
                />
            <EditText


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Enter Your Name"
                android:layout_marginTop="40dp"
                android:id="@+id/editfeedbackname"
                android:layout_below="@id/textFeedback"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_messagecomment"
                android:layout_marginTop="26dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_marginBottom="20dp"
                android:height="160dp"
                android:gravity="top"
                android:hint="Your Suggestions , Feedback"
                android:layout_below="@id/editfeedbackname"
                android:layout_marginTop="40dp"
                android:id="@+id/edityourMessageinFeedback"

                />
        </LinearLayout>
        <Button

            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:paddingBottom="1dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/white_circular_layout"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            android:id="@+id/submitFeedbackButton"
            />

    </LinearLayout>

</RelativeLayout>